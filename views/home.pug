extends base.pug

block scripts 
    script(src="../static/script.js")
block styles
    link(rel="stylesheet", href="../static/style.css")
block content
    nav#navbar
      ul
        div#logo
          img(src="/static/img/logo.png", alt="Logo")
          span Dance Academy
        li 
          a(href="/") Home
        li 
          a(href="/about") About
        li 
          a(href="/contact") Contact
        li 
          a(href="/login") Login
    hr

    section#introsection
      div JOIN NOW THE NEW DANCE ACADEMY
      div Dance is a way to express yourself
    hr

    section#mission
      h2 Our Mission

      .card 
        p HIP-HOP
        .card-box
          .card-img
            img(src="/static/img/pic1.webp", alt="HIP-HOP")
          .card-content
            p THIS IS THE BEST DANCE ACADEMY

      .card 
        p CLASSICAL
        .card-box
          .card-img
            img(src="/static/img/pic3.png", alt="CLASSICAL")
          .card-content
            p THIS IS THE BEST DANCE ACADEMY

      .card 
        p BIG-BANG
        .card-box
          .card-img
            img(src="/static/img/images (1).png", alt="BIG-BANG")
          .card-content
            p THIS IS THE BEST DANCE ACADEMY
    hr

    section#sponsor
      h2 Our Sponsors
      .sponsors
        img(src="../static/img/apple-7408883_1280.png", alt="error")
        img(src="../static/img/reddit-6615447_1280.webp", alt="error")
        img(src="../static/img/windows-310290_1280.webp", alt="error")
        img(src="../static/img/skype.webp", alt="error")
